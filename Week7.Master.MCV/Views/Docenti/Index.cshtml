@model List<DocenteViewModel>

<h1>Ecco la lista dei docenti</h1>

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Telefono</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Nome.</td>
            <td>@item.Cognome.</td>
            <td>@item.Email.</td>
            <td>@item.Telefono.</td>
            
        </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            @*conta quante righe ci sono*@
            <th>Totale</th>
            <th>@Model.Count</th>
            @*<th></th>*@
            <th></th>
        </tr>
    </tfoot>



</table>

